placeholder($color, $focusColor = null)
    &::-moz-placeholder
        color $color
        // fix for ff 19+, which set default opacity .7
        opacity(1, false)
        transition opacity .3s, color .3s
    &::-webkit-input-placeholder
        color $color
        opacity(1, false)
        transition opacity .3s, color .3s
    if $focusColor
        &:focus::-moz-placeholder
            color $focusColor
            transition opacity .3s, color .3s
        &:focus::-webkit-input-placeholder
            color $focusColor
            transition opacity .3s, color .3s
